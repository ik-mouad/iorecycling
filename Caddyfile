:88 {
  encode gzip

  # Keycloak est configuré avec KC_HTTP_RELATIVE_PATH=/auth
  # On utilise handle_path pour préserver le /auth dans l'URL
  handle_path /auth/* {
    reverse_proxy keycloak:8080
  }

  handle_path /api/* {
    reverse_proxy backend:8080
  }

  handle {
    reverse_proxy frontend:80
  }
}

