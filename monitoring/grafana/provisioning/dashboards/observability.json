{
  "title": "IORecycling - Observabilité Complète",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 3,
  "tags": ["observability", "logs", "traces", "multi-tenant"],
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Logs récents",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service=\"iorecycling-backend\"}",
          "refId": "A",
          "editorMode": "code",
          "queryType": "range",
          "range": true
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "maxDataPoints": null,
      "interval": "",
      "datasource": { "type": "loki", "uid": "loki" }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Top endpoints lents (p95 > 500ms)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{application=\"iorecycling-backend\"}[5m])) by (le, uri)))",
          "refId": "A",
          "legendFormat": "{{uri}}"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.5, "color": "yellow" },
              { "value": 1, "color": "red" }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 3,
      "type": "table",
      "title": "Top exceptions",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 6 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "topk(10, sum by (exception_type) (count_over_time({service=\"iorecycling-backend\", level=\"ERROR\"} [5m])))",
          "refId": "A",
          "editorMode": "code",
          "format": "table",
          "instant": true,
          "queryType": "instant",
          "range": false
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "Value"
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Erreurs 5xx et erreurs applicatives par tenant",
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (tenantId) (rate({service=\"iorecycling-backend\", http_status_code=~\"5..\"} [5m]))",
          "refId": "A",
          "legendFormat": "5xx {{tenantId}}",
          "editorMode": "code",
          "queryType": "range",
          "range": true
        },
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (tenantId) (rate({service=\"iorecycling-backend\", level=\"ERROR\"} [5m]))",
          "refId": "B",
          "legendFormat": "Errors {{tenantId}}",
          "editorMode": "code",
          "queryType": "range",
          "range": true
        }
      ],
      "maxDataPoints": null,
      "interval": "",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0, "color": "red" }
            ]
          },
          "unit": "req/s"
        }
      }
    },
    {
      "id": 5,
      "type": "logs",
      "title": "Film utilisateur (filtrer par userId ou traceId dans la requête)",
      "gridPos": { "x": 12, "y": 14, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service=\"iorecycling-backend\"}",
          "refId": "A",
          "editorMode": "code",
          "queryType": "range",
          "range": true
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      },
      "maxDataPoints": null,
      "interval": "",
      "datasource": { "type": "loki", "uid": "loki" }
    },
    {
      "id": 6,
      "type": "traces",
      "title": "Traces récentes",
      "gridPos": { "x": 0, "y": 22, "w": 24, "h": 10 },
      "targets": [
        {
          "datasource": { "type": "tempo", "uid": "tempo" },
          "queryType": "traceql",
          "query": "{ service.name = \"iorecycling-backend\" }",
          "refId": "A",
          "serviceName": "iorecycling-backend"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Logs par niveau",
      "gridPos": { "x": 0, "y": 32, "w": 8, "h": 6 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (level) (count_over_time({service=\"iorecycling-backend\"} [5m]))",
          "refId": "A",
          "legendFormat": "{{level}}",
          "editorMode": "code",
          "queryType": "range",
          "range": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "pointSize": 5
          },
          "unit": "short"
        }
      },
      "maxDataPoints": null,
      "interval": ""
    },
    {
      "id": 8,
      "type": "traces",
      "title": "Traces par statut",
      "gridPos": { "x": 8, "y": 32, "w": 8, "h": 6 },
      "targets": [
        {
          "datasource": { "type": "tempo", "uid": "tempo" },
          "queryType": "traceql",
          "query": "{ service.name = \"iorecycling-backend\" }",
          "refId": "A",
          "serviceName": "iorecycling-backend"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Requêtes par tenant",
      "gridPos": { "x": 16, "y": 32, "w": 8, "h": 6 },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (tenantId) (rate({service=\"iorecycling-backend\"} [5m]))",
          "refId": "A",
          "legendFormat": "{{tenantId}}",
          "editorMode": "code",
          "queryType": "range",
          "range": true
        }
      ],
      "maxDataPoints": null,
      "interval": "",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "pointSize": 5
          },
          "unit": "req/s"
        }
      },
      "maxDataPoints": null,
      "interval": ""
    }
  ],
  "templating": {
