{
  "title": "IORecycling - Performance Technique",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Disponibilité (up)",
      "targets": [
        {
          "expr": "avg_over_time(up{job=\"iorecycling-backend\"}[5m])",
          "format": "time_series"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "graph",
      "title": "Latence HTTP p95 / p99",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 }
    },
    {
      "type": "graph",
      "title": "RPS (requêtes par seconde)",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m])) by (method)",
          "legendFormat": "{{method}}"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Taux d'erreurs 4xx / 5xx",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"4..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m]))",
          "legendFormat": "4xx"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m]))",
          "legendFormat": "5xx"
        }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "JVM - Heap used / max",
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\"})",
          "legendFormat": "used"
        },
        {
          "expr": "sum(jvm_memory_max_bytes{area=\"heap\"})",
          "legendFormat": "max"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "DB - Connexions Hikari (active / idle / pending)",
      "targets": [
        {
          "expr": "sum(hikaricp_connections_active)",
          "legendFormat": "active"
        },
        {
          "expr": "sum(hikaricp_connections_idle)",
          "legendFormat": "idle"
        },
        {
          "expr": "sum(hikaricp_connections_pending)",
          "legendFormat": "pending"
        }
      ],
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 }
    }
  ]
}


