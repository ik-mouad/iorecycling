:88 {
  encode gzip

  @authRoot path /auth
  redir @authRoot /auth/ 308

  handle /auth/* {
    reverse_proxy keycloak:8080 {
      header_up Host {host}
      header_up X-Real-IP {remote}
      header_up X-Forwarded-For {remote}
      header_up X-Forwarded-Proto {scheme}
    }
  }

  handle /api/* {
    reverse_proxy backend:8080
  }

  handle {
    reverse_proxy frontend:80
  }
}

