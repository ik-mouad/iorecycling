{
  "name": "iorecycling",
  "version": "0.0.1",
  "description": "IORecycling - Plateforme de recyclage",
  "private": true,
  "scripts": {
    "pree2e": "playwright install --with-deps",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "npx playwright show-report",
    "e2e:setup": "playwright test --project=setup",
    "e2e:ui": "npx playwright test --ui",
    "e2e:debug": "npx playwright test --debug",
    "e2e:install": "npx playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
